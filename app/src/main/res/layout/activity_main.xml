<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="wegepunkte.sabel.com.wegepunkte.MainActivity">

    <Button
        android:id="@+id/btn_wpSpeichern"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="152dp"
        android:text="WP Speichern"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btn_wpAnzeigen"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="3dp"
        android:layout_marginTop="82dp"
        android:text="WP Anzeigen"
        app:layout_constraintEnd_toEndOf="@+id/btn_wpSpeichern"
        app:layout_constraintTop_toBottomOf="@+id/btn_wpSpeichern" />

</android.support.constraint.ConstraintLayout>